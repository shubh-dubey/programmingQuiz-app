<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shubh.android.programquiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.shubh.android.programquiz.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shubh.android.programquiz.FirstSectionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="C" />
        <activity
            android:name="com.shubh.android.programquiz.SecondSectionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Java" />
        <activity android:name="com.shubh.android.programquiz.ThirdSectionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Python" />
    </application>

</manifest>